doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="../public/style.css")
    body
        header
            h1 Noom
            div#status
        main
            div#welcome
                form    
                    input(placeholder="room name", required, type="text")
                    button Enter room
            div#call
                div#myStream
                    video#myFace(autoplay,playsinline, width="300", height="300")
                    select#cameras
                    div.video_toggle
                        button#mute Mute
                        button#camera Turn Camera Off
            div#chats
                form
                    textarea(placeholder="Send Message", required, type="text")
                    button Send Message
                ul 
        script(src="/socket.io/socket.io.js") 
        script(src="/public/app.js") 